@model SharedObjects.ValueObjects.VNew
@{
    ViewData["Title"] = $"{Model.Title}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var newRandom = ViewBag.newRandom as IEnumerable<SharedObjects.ValueObjects.VNew>;
}
<div class="ltn__utilize-overlay"></div>
<div class="ltn__breadcrumb-area ltn__breadcrumb-area-2 ltn__breadcrumb-color-white bg-overlay-theme-black-90 bg-image plr--9---" data-bg="/img/bg/9.jpeg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner ltn__breadcrumb-inner-2 justify-content-between">
                    <div class="section-title-area ltn__section-title-2">
                        <h6 class="section-subtitle ltn__secondary-color">//  Welcome to our company</h6>
                        <h1 class="section-title white-color">Trang tin tức</h1>
                    </div>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html">Trang chủ</a></li>
                            <li>Tin tức</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE DETAILS AREA START (blog-details) -->
<div class="ltn__page-details-area ltn__blog-details-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__blog-details-wrap">
                    <div class="ltn__page-details-inner ltn__blog-details-inner">
                        <h2 class="ltn__blog-title">
                            @Model.Title
                        </h2>
                        <div class="ltn__blog-meta">
                            <ul>
                                <li class="ltn__blog-author">
                                    <a href="#">Tác giả: @Model.UserName</a>
                                </li>
                                <li class="ltn__blog-date">
                                    <i class="far fa-calendar-alt"></i>@Model.CreatedDate.ToString("dd/MM/yyyy")
                                </li>
                                <li>
                                    <a href="#"><i class="far fa-comments"></i>35 Bình luận</a>
                                </li>
                            </ul>
                        </div>
                        @Html.Raw(Model.Contents)

                    </div>
                    <hr>
                    <div class="related-post-area mb-50">
                        <h4 class="title-2">Bài viết liên quan</h4>
                        <div class="row">
                            @foreach (var item in newRandom)
                            {
                                string url = $"{HostConfig.Domain}/images/new/{item.Thumb}";
                                <div class="col-md-4">
                                    <div class="ltn__blog-item ltn__blog-item-6">
                                        <div class="ltn__blog-img">
                                            <a asp-controller="New" asp-action="Detail" asp-route-id="@item.PostId"><img width="318" height="298" src="@url" alt="Image"></a>
                                        </div>
                                        <div class="ltn__blog-brief">
                                            <div class="ltn__blog-meta">
                                                <ul>
                                                    <li class="ltn__blog-date ltn__secondary-color">
                                                        <i class="far fa-calendar-alt"></i>@item.CreatedDate
                                                    </li>
                                                </ul>
                                            </div>
                                            <h3 class="ltn__blog-title">
                                                <a asp-controller="New" asp-action="Detail" asp-route-id="@item.PostId">
                                                    @item.Title
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE DETAILS AREA END -->
<!-- FEATURE AREA START ( Feature - 3) -->
