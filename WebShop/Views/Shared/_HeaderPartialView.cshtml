                                <div class="ltn__drop-menu user-menu">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="icon-user"></i></a>
                                            <ul>
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <li><a asp-action="index" asp-controller="account">Tài khoản</a></li>
                                                    <li><a asp-action="Index" asp-controller="WishList">Yêu thích</a></li>
                                                    <li><a asp-action="logout" asp-controller="account">Đăng xuất</a></li>
                                                }
                                                else
                                                {
                                                    <li><a href="/dang-nhap.html">Đăng nhập</a></li>
                                                    <li><a href="/dang-ky.html">Đăng ký</a></li>
                                                    <li><a asp-action="Index" asp-controller="WishList">Yêu thích</a></li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <!-- mini-cart 2 -->
                                @await Component.InvokeAsync("NumberCart")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ltn__header-middle-area end -->

    <!-- header-bottom-area start -->
    <div class="header-bottom-area ltn__border-top ltn__header-sticky  ltn__sticky-bg-black--- ltn__sticky-bg-secondary ltn__secondary-bg section-bg-1 menu-color-white d-none d-lg-block">
        <div class="container">
            <div class="row">
                <div class="col header-menu-column justify-content-center">
                    <div class="sticky-logo">
                        <div class="site-logo">
                            <a asp-action="Index" asp-controller="Home"><img src="~/img/logo-2.png" alt="Logo"></a>
                        </div>
                    </div>
                    <div class="header-menu header-menu-2">
                        <nav>
                            <div class="ltn__main-menu">
                                <ul>
                                    <li>
                                        <a asp-action="Index" asp-controller="Home"><i class="anticon anticon-home m-r-5"></i><span>Trang chủ</span></a>
