                                    </li>
                                    <li><a asp-action="Contact" asp-controller="Home">Liên hệ</a></li>
                                    <li id="cart-header">@await Component.InvokeAsync("NumberCart")</li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- header-bottom-area end -->
</header>
<!-- HEADER AREA END -->
