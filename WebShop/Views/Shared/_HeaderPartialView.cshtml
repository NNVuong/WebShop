    <!-- ltn__header-middle-area start -->
    <div class="ltn__header-middle-area">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="site-logo">
                        <a asp-action="Index" asp-controller="Home"><img src="~/img/logo.png" alt="Logo"></a>
                    </div>
                </div>
                <div class="col header-contact-serarch-column d-none d-lg-block">
                    <div class="header-contact-search">
                        <!-- header-feature-item -->
                        <div class="header-feature-item">
                            <div class="header-feature-icon">
                                <i class="icon-call"></i>
                            </div>
                            <div class="header-feature-info">
                                <h6>Hotline</h6>
                                <p><a href="tel:+84768482178">0768482178</a></p>
                            </div>
                        </div>
                        <!-- header-search-2 -->
                        <div class="header-search-2">
                            <div class="search-wrapper">
                                <input class="search-product" id="search-product" type="text" name="search" value="" placeholder="Tìm kiếm..." />
                                <button id="clear-input">
                                    <span><i class="fa-regular fa-circle-xmark"></i></span>
                                </button>
                                <i class="fa-solid fa-spinner loading"></i>
                                <div id="popperwrapper" class="popperwrapper">
                                    <div class="list" id="table-result">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col">
                    <!-- header-options -->
                    <div class="ltn__header-options">
                        <ul>
