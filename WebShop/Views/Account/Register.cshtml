@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SharedObjects.ViewModels.RegisterViewModel
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h2 class="section-title">Đăng ký tài khoản</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="UserName" type="text" name="UserName" placeholder="Tên tài khoản">
                        <input asp-for="Email" type="text" name="Email" placeholder="Email">
                        <input asp-for="FullName" type="text" name="FullName" placeholder="Họ và tên">
                        <input asp-for="Address" type="text" name="Address" placeholder="Địa chỉ">
                        <input asp-for="Phone" type="text" name="Phone" placeholder="Số điện thoại">
                        <input asp-for="Password" type="password" name="Password" placeholder="Mật khẩu">
                        <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">Tạo mới</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <div class="go-to-btn mt-50">
                            <a asp-controller="Account" asp-action="Login">Bạn đã có tài khoản?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>