@model SharedObjects.ViewModels.ChangePasswordViewModel
    <div class="ltn__myaccount-tab-content-inner">
        <div class="ltn__form-box">
            <form asp-controller="Account" asp-action="ChangePassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <fieldset>
                    <legend>Đổi mật khẩu</legend>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Mật khẩu hiện tại</label>
                            <input type="password" class="form-control" asp-for="PasswordNow">
                            <label>Mật khẩu mới</label>
                            <input type="password" class="form-control" asp-for="Password">
                            <label>Nhập lại mật khẩu mới</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword">
                        </div>
                    </div>
                </fieldset>
                <div class="btn-wrapper">
                    <button type="submit" class="btn theme-btn-1 btn-effect-1 text-uppercase">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>