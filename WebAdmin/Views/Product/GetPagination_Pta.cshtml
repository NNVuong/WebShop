@model List<SharedObjects.ValueObjects.VProduct>
@if (Model != null)
{
    foreach (var item in Model)
    {
        string url = $"{HostConfig.Domain}/images/product/{item.Avatar}";
        <tr>

            <td>
                @item.rc
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded" src="@url" style="max-width: 60px; height :60px" alt="">
                </div>
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                    <h6 class="m-b-0 m-l-10">@item.ProductName</h6>
                </div>
            </td>
            <td>@item.CatName</td>
            <td>@item.Price.Value.ToString("#,##0") VNĐ</td>
            <td>@item.UnitsInStock</td>
            <td>
                @if (item.UnitsInStock > 0)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Còn hàng</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-danger badge-dot m-r-10"></div>
                        <div>Hết hàng</div>
                    </div>
                }
            <td>
                <a target="_blank" class="btn btn-primary btn-tone m-r-5" asp-controller="Product" asp-action="ProductImage" asp-route-productId="@item.ProductId">Hình ảnh</a>
                <a class="btn btn-secondary btn-tone m-r-5" asp-controller="Product" asp-action="Update" asp-route-productId="@item.ProductId">Sửa</a>
                <a class="btn btn-success btn-tone m-r-5 delete" data-id="@item.ProductId">Xóa</a>

            </td>
        </tr>
    }
}

