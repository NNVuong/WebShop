@model SharedObjects.ViewModels.FilterViewModel

<div class="modal-header">
    <h5 class="modal-title">CHỌN MỐC THỜI GIAN XEM DOANH SỐ</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    
    <form asp-controller="sales" asp-action="filter" method="post">

        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <input type="date" class="form-control datepicker-input" id="valueinput1" placeholder="ngày bắt đầu" asp-for="BeginTime">
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input type="date" class="form-control datepicker-input" id="valueinput2" placeholder="ngày kết thúc" asp-for="EndTime">
                </div>
            </div>

        </div>

        <button type="submit" class="btn btn-success">
            <i class="anticon anticon-search"></i> Xem
        </button>
    </form>
    
</div>

